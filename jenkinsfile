pipeline {
    agent any
    environment {
        VERSION='1.3.0'
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')
    }
    stages {
        stage('Build') {
            steps {
                echo 'Build Ediyorum..'
                echo "version ${VERSION}"
            }
        }
        stage('Test') {
            steps {
                echo 'Test Ediyorum..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy Ediyorum....'
                echo "deploying ${DOCKERHUB_CREDENTIALS}"
            }
        }
    }
}